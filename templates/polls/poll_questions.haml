-extends "smartmin/update.html"
-load smartmin

-block fields
  <fieldset>
    -for field in fields
      -if 'include' in field
        <div class="question">

      {% render_field field %}

      -if 'title' in field
        </div>
  </fieldset>

-block extra-style
  :css
    .question {
      border: 1px solid #ccc;
      margin-bottom: 10px;
      padding: 10px;
    }


